<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">
        {% endblock %}
    </head>

    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-warning">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">

                    {% if not is_granted('ROLE_USER') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('home') }}">Acceuil</a>
                        </li>
                        <li>
                            <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                        </li> 

                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login_prof') }}">Connexion professeur</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login_eleve') }}">Connexion élève</a>
                        </li>

                    {% endif %}

                    {% if is_granted('ROLE_ELEVE') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('home_eleve') }}">Acceuil</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('profile_eleve') }}">Mon profil</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_logout_eleve')}}">Déconnexion</a>
                    </li>

                    {% elseif is_granted('ROLE_PROF') %}

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('home_prof') }}">Acceuil</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('profile_prof') }}">Mon profil</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_logout_prof')}}">Déconnexion</a>
                    </li>
                    {% endif %}

                </ul>
            </div>
        </nav>
        
        {% block body %}

        {% endblock %}

        {% block javascripts %}{% endblock %}

    </body>
</html>
