{% extends 'base.html.twig' %}

{% block title %}Connection professeur{% endblock %}

{% block body %}

<!-- LOGIN SECTION -->
{% block flash %}
    {% for flash_message in app.session.flashbag.get('alreadyExists') %}
        <div class="container alert alert-info" role="alert">
            {{ flash_message }}
        </div>
    {% endfor %}

    {% for flash_message in app.session.flashbag.get('confirm') %}
        <div class="container alert alert-info" role="alert">
            {{ flash_message }}
        </div>
    {% endfor %}
{% endblock %}

<section class="clearfix loginSection">
    <div class="container">
        <div class="row">
            <div class="center-block col-md-5 col-sm-6 col-xs-12">
                <div class="panel panel-default loginPanel">
                    <div class="panel-heading text-center">Connexion professeur</div>
                    <div class="panel-body">
                        <form method="post" class="loginForm">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div> 
                                <div class="alert alert-danger">Mot de passe / email invalide</div> 
                            {% endif %}
                            <div class="form-group">
                                <label for="inputEmail">Email</label>
                                <input type="text" name="email" id="inputEmail" class="form-control" required autofocus>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword">Password</label>
                                <input type="password" name="password" id="inputPassword" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-lg btn-primary" type="submit">
                                    Connexion
                                </button><a href="{{ path('app_forgotten_password') }}" class="pull-right link">Mot de passe oubli√© ?</a>
                            </div>
                            <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticateEleve') }}">
                        </form>
                    </div>
                    <div class="panel-footer text-center">
                        <p>Pas encore inscrit ? <a href="{{ path( 'register', {'isEleve':0} ) }}" class="link">S'inscrire</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
