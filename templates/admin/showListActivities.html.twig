{% extends 'base.html.twig' %}

{% block body %}

    <table class="table table-striped table-warning">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <!-- <th scope="col">Détails (activités de la activite)</th> -->
                <th scope="col">Modifier</th>
                <!-- <th scope="col">Supprimer</th> -->
            </tr>
        </thead>
        
        <tbody>
            {% for activite in activites %}
                
                <tr>
                    <td>{{  activite.nom  }}</td>
                    <td><a href="{{ path('edit_activite',{'id':activite.id}) }}"><i class="fas fa-edit"></i></a></td>
                    {#<td><a href="{{ path('showInfoSession',{'id':activite.id}) }}"><i class="fas fa-list-alt"></i></a></td>#}
                    <td><a href="{{ path('delete_activite',{'id':activite.id}) }}"><i class="fas fa-trash-alt"></i></a></td> 
                </tr>
                
            {% endfor %}
        </tbody>
    </table>

    <p><a href="{{ path('add_activite') }}"><button type="button" class="btn btn-warning btn-lg">Ajouter une activite</button></a></p>

{% endblock %}